<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/bg_background_main"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lk.aditi.ecom_seller.ui.activity.order.Order_Detail_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_gravity="center_vertical"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_shape"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                  android:layout_marginHorizontal="16dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bold"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:text=" Order #121212" />

                <TextView
                     android:textColor="@color/black"
                    android:fontFamily="@font/bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:text="John Dukarshi" />



            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_detail"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textSize="14sp"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/purple"/>

                <View
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                     android:layout_width="48dp"
                    android:layout_height="1dp"
                    android:background="@color/purple"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.cardview.widget.CardView
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:fontFamily="@font/medium"
                        android:text="John Dukarshi"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_green"
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingHorizontal="10dp"
                            android:layout_marginVertical="5dp"
                            android:layout_marginRight="16dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:fontFamily="@font/bold"
                            android:text="Call"
                            android:textColor="@color/white"
                            android:textSize="16sp" />


                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:layout_marginVertical="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/bold"
                    android:text="Total Cost- Rs. 12,450"
                    android:textColor="@color/red"
                    android:textSize="18sp" />

                <TextView
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/regular"
                    android:text="Home- 21, Alex Davidson Avenue, Opposite
Omegatron, Vicent Smith Quarters, Victoria Island,
Lagos, Nigeria"
                    android:textColor="@color/black"
                    android:textSize="12sp" />



            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordered Items" />



        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_order_items_det"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/regular"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Shopping Cost" />

            <TextView
                android:layout_marginRight="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/regular"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 1500" />



        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/regular"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="First Purchase Discount" />

            <TextView
                android:layout_marginRight="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/regular"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 50" />



        </LinearLayout>



    </LinearLayout>




    <LinearLayout
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/bg_btn_green"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="ACCEPT"
                android:id="@+id/tv_accept"
                 android:textColor="@color/white"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
             android:layout_gravity="center_vertical"
            android:layout_marginRight="24dp"
            android:background="@drawable/bg_solid_red"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="DECLINE"
                android:id="@+id/tv_decline"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="16dp"
        android:layout_width="match_parent"
        android:background="@drawable/bg_btn_purple_dark"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="UPDATE"
            android:id="@+id/tv_update"
             android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>



</LinearLayout>