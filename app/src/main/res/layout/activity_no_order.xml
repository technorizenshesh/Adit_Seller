<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@drawable/bg_background_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lk.aditi.ecom_seller.ui.activity.order.No_Order_Activity">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingBottom="15dp">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16sp"
                android:layout_weight="1"
                android:background="@drawable/bg_round"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_marginHorizontal="16sp"
                    android:layout_marginVertical="5dp"
                    android:src="@drawable/ic_icon_search"
                    app:tint="@color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16sp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint=""
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_Notification"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="16sp"
                android:src="@drawable/ic_camera_bg" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_no_order"
        android:layout_centerInParent="true"
         android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/noorder"/>

    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center"
          android:layout_below="@id/iv_no_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Order at the moment!"
        android:textSize="22sp"
        android:fontFamily="@font/bold"
        android:textColor="@color/black"/>

</RelativeLayout>