<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lk.aditi.ecom_seller.ui.activity.AddProductActivity">

    <LinearLayout
        android:paddingBottom="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Product" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="16dp"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
             android:layout_width="wrap_content"
              android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                  android:id="@+id/iv_serach_add_pro"
                 android:layout_width="match_parent"
                android:layout_height="32dp"
                android:src="@drawable/ic_process_filled1" />


            <TextView
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:fontFamily="@font/regular"
                android:text="Search and \nAdd"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                 android:id="@+id/iv_serach_add_custom_pro"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="center"
                 android:src="@drawable/ic_process_blank" />


            <TextView
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                 android:fontFamily="@font/regular"
                android:gravity="center"
                android:text="Add Custom \nProduct"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>




    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame"/>




</LinearLayout>